{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type":"shell",
            "command":"g++",
            "args": [
                "-o", "out", "-I", "./Client", "Client/*.cpp", "-lSDL2"
            ],
            "group": {
                "kind":"build",
                "isDefault": true
            }
        },
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        }
    ]
}